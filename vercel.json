{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_FORCE_DYNAMIC": "true",
    "OPTIONAL_COMPONENT_CACHE": "false",
    "NEXT_DISABLE_STRICT_EXPORT_VALIDATION": "true"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_FORCE_DYNAMIC": "true",
      "OPTIONAL_COMPONENT_CACHE": "false",
      "NEXT_DISABLE_STRICT_EXPORT_VALIDATION": "true"
    }
  }
} 